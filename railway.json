{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 2 --timeout 120 index:app",
        "sleepApplication": false,
        "multiRegionConfig": {
            "asia-southeast1-eqsg3a": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
